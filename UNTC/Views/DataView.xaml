<UserControl x:Class="UNTC.Views.DataView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UNTC.Views"
             mc:Ignorable="d" 
             d:DesignHeight="416" d:DesignWidth="420">
    <Grid Background="#FFC4C8EA">
        <Button Content="Переход" Height="37" Width="200" 
                HorizontalAlignment="Left" VerticalAlignment="Top" Margin="45,333,0,0"/>
        <Label Content="Название" HorizontalAlignment="Left" Margin="33,35,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.489,0.594"/>
        <Label Content="Глубина" HorizontalAlignment="Left" Margin="33,77,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.489,0.594"/>
        <Label Content="Плотность" HorizontalAlignment="Left" Margin="33,121,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.489,0.594"/>
        <Label Content="{Binding Title}" HorizontalAlignment="Left" Margin="118,35,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.489,0.594"/>
        <Label Content="{Binding Depth}" HorizontalAlignment="Left" Margin="118,77,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.489,0.594"/>
        <Label Content="{Binding Density}" HorizontalAlignment="Left" Margin="118,121,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.489,0.594"/>
    </Grid>
</UserControl>
